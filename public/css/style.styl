$light   = 'MetricLight'
$regular = 'MetricRegular'
$medium  = 'MetricSemiBold'
$bold    = 'MetricBold' 
$color   = #01A982
absolute()
	position absolute
	top 0
	left 0
	right 0
	bottom 0
relative()
	position relative
	top 0
	left 0
	right 0
	bottom 0
flexCenter()
	display flex
	display -webkit-flex
	align-items center
flexStart()
	display flex
	display -webkit-flex
	align-items flex-start
flexEnd()
	display flex
	display -webkit-flex
	align-items flex-end
body
	background-color #efefef
	font-family $regular
img
	width 100%
p
	margin 0	
.js-flex
	flexCenter()
	justify-content center
.js-fondo
	absolute()
	background url(../img/fondo/fondo-home-min.jpg) no-repeat center center
	background-size cover
	width 100%
	height 500px
	z-index -1
.js-section
	position relative
	padding 40px 20px
.js-container
	width 100%
	max-width 1150px
	margin auto
.header
	position fixed
	top 0
	width 100%
	color #FFFFFF
	padding 5px 20px
	height 75px
	.header-container
		flexCenter()
		width 100%
		height 100%
		max-width 1150px
		margin auto
		.header-container--left
			flexCenter()
			width 100%
			justify-content flex-start
			img
				max-width 250px
		.header-container--right
			flexCenter()
			width 100%
			justify-content flex-end
.js-home
	height 500px
.js-contenido
	text-align center
	color #FFFFFF
	max-width 680px
	h2
		font-size 60px
		line-height 60px
		font-family $bold
	p
		font-size 32px
		line-height 34px
		margin-bottom 10px
.js-information
	padding 20px 0
	text-align center	
	h2	
		font-size 30px
		line-height 30px
		margin 10px 0
		font-family $medium
	h3
		margin 10px 0
	p
		font-size 22px
		line-height 22px
	span
		font-size 20px
		line-height 20px
		font-family $light
.js-title
	text-align center
	font-size 32px
	margin 20px 0
	font-family $bold
.js-button
	background-color #01a982 !important
	color #fff
	font-size 16px
	margin 10px
	width 100%
	max-width 160px
	font-family $medium
	border 2px solid #01a982
.js-input
	width 100%
	border 1px solid rgba(0,0,0,0.15)
	margin 5px 0
	background-color #fff
	padding 7px 20px
	label
		color #666
		font-family $light
	.form-control
		width 100%
		font-weight 100
		font-size 14px
		border none
		padding 0
		box-shadow none	
.js-select
	.bootstrap-select
		width 100% !important
		.dropdown-toggle
			border none !important
			font-size 16px
			font-family $bold
			height 100%
footer
	background-color #000
	color #fff
@media (max-width : 768px)
	.header
		background-color #000
@media (max-width : 640px)
	.js-contenido
		padding 20px
		h2
			font-size 38px
			line-height 42px
			font-family $bold
	